<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/loginImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/logo3" />



        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textColor="#000000"
                style="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Email: "
                android:layout_width="150dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/LoginEmailID"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:hint="johndoe@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textColor="#000000"
                style="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Passsword: "
                android:layout_width="150dp"
                android:layout_height="match_parent"/>
            <EditText
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:id="@+id/LoginPasswordID"
                android:ems="10"
                android:hint="************"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>




        <Button
            android:layout_gravity="center"
            android:id="@+id/btnLoginToSystem"
            android:backgroundTint="#ffffff"
            android:layout_width="256dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape"
            android:text="login"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LoginPasswordID" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btnRegisterInTheSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Register"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <TextView
                android:id="@+id/btnForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="forgot password?"
                android:textColor="#0F2AB3"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.762"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" />


        </LinearLayout>

