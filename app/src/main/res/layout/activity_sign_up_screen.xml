<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".SignUpScreen">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/signupImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/boy_avatar" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!--        <CheckBox-->
        <!--        android:id="@+id/female_checkbox"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginStart="8dp"-->
        <!--        android:layout_marginTop="16dp"-->
        <!--        android:layout_marginEnd="8dp"-->
        <!--        android:buttonTint="@color/hintTextColor"-->
        <!--        android:checked="true"-->
        <!--        android:text="Female"-->
        <!--        android:textColor="@color/textColor"-->
        <!--        android:textSize="20sp" />-->

        <!--    <CheckBox-->
        <!--        android:id="@+id/male_checkbox"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginStart="64dp"-->
        <!--        android:layout_marginTop="15dp"-->
        <!--        android:layout_marginEnd="8dp"-->
        <!--        android:buttonTint="@color/hintTextColor"-->
        <!--        android:text="Male"-->
        <!--        android:textColor="@color/textColor"-->
        <!--        android:textSize="20sp"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintHorizontal_bias="0.011"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/pic_imageview" />-->

        <RadioGroup
            android:id="@+id/auton_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <RadioButton
                android:textStyle="bold"
                android:buttonTint="#000000"
                android:layout_margin="10dp"
                android:id="@+id/maleRadio"
                android:text="Male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <!-- android:layout_marginRight="380dp" -->

            <!--            <RadioButton-->
            <!--                android:id="@+id/auton_radio_2"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                 />-->

            <RadioButton
                android:textStyle="bold"
                android:buttonTint="#000000"
                android:layout_margin="10dp"
                android:text="Female"
                android:id="@+id/femaleRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Email: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:id="@+id/registerEmailID"
            android:hint="johndoe@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Passsword: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:id="@+id/registerPassword"
            android:ems="10"
            android:hint="************"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Name: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:id="@+id/registerName"
            android:hint="John Doe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Profession: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="text"
            android:id="@+id/registerProfession"
            android:hint="Student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="WorkPlace: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="text"
            android:id="@+id/registerWorkPlace"
            android:hint="Florida, USA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Phone Number: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/registerPhoneNumber"
            android:hint="111222333"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#000000"
            style="bold"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Twitter: "
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:gravity="center"
            android:inputType="text"
            android:id="@+id/registerTwitterHandle"
            android:hint="/@johnDoe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <!--       -->

    <Button
        android:layout_gravity="center"

        android:id="@+id/registerButtonAndGetToLoginPage"
        android:layout_width="256dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_shape"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twitter_edittext" />

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/LoginIfAlreadyHaveAccount"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/textColor"
        android:ems="10"
        android:text="Have an Account, Login"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="@color/hintTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    </RelativeLayout>


</LinearLayout>

</ScrollView>